datasource sqlite {
  url      = "file:./data.db"
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "./@generated/client"
}

generator testutils {
  provider = "./dist/generator.js"
  // the path is resolved relative to cwd not relative to file path
  output   = "./@generated/prisma-test-utils"
}

model User {
  id       String  @id
  name     String
  email    String
  isActive Boolean
  pet      Pet
  house    House?  @relation(name: "UserHouse")
}

enum Animal {
  Dog Cat Dinosaur
}

model Pet {
  id       Int      @id @default(autoincrement())
  name     String
  animal   Animal
  toys     Toy[]
  birthday DateTime
}

model Toy {
  id    String @id @default(uuid())
  name  String
  price Float
}

model House {
  id            String @id
  address       String
  numberOfRooms Int
  residents     User[] @relation(name: "UserHouse")
}